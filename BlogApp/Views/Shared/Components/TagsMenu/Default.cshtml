@model List<Tag>
<div class="card shadow-sm">
    <div class="card-header bg-white">
        <h5 class="card-title mb-0">Etiketler</h5>
    </div>
    <div class="card-body">
        <ul class="list-inline d-flex flex-wrap gap-2">
            @foreach (var tag in Model)
            {
                <li class="list-inline-item">
                    <a href="/posts/tag/@tag.Url" class="btn btn-outline-secondary btn-sm rounded-pill px-3">
                        @tag.Text
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
  