@model List<Tag>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-header bg-light border-bottom-0 rounded-top-4">
        <h5 class="card-title mb-0 text-dark fw-semibold">
            <i class="bi bi-tags me-2 text-primary"></i> Etiketler
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="d-flex flex-wrap gap-2">
                @foreach (var tag in Model)
                {
                    <a href="/posts/tag/@tag.Url" class="btn btn-sm tag-badge">
                        <i class="bi bi-hash me-1"></i>@tag.Text
                    </a>
                }
            </div>
        }
        else
        {
            <p class="text-muted">Henüz etiket eklenmemiş.</p>
        }
    </div>
</div>

<style>
    .tag-badge {
        background-color: #f8f9fa;
        color: #495057;
        border: 1px solid #dee2e6;
        border-radius: 50rem;
        padding: 0.4rem 0.9rem;
        text-decoration: none;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .tag-badge:hover {
        background-color: #0d6efd;
        color: white;
        border-color: #0d6efd;
    }
</style>
